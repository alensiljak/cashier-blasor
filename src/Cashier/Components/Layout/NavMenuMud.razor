@using MudBlazor

<MudDrawerHeader LinkToIndex="true" Class="mud-theme-primary">
    <MudContainer Class="d-flex flex-column align-center ma-0 pa-0">
        <MudImage Src="/icon-192.png" Width="90" />
        <MudText Typo="Typo.h4" Class="mt-1">Cashier II</MudText>
    </MudContainer>

</MudDrawerHeader>

<MudNavMenu Color="Color.Tertiary">
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@IconsMud.Home">Home</MudNavLink>
    <MudNavLink Href="/journal" Match="NavLinkMatch.Prefix" Icon="@IconsMud.Scroll">Journal</MudNavLink>
    <MudNavLink Href="/favourites" Match="NavLinkMatch.Prefix" Icon="@IconsMud.Star">Favourites</MudNavLink>
    <MudNavLink Href="/accounts" Match="NavLinkMatch.Prefix" Icon="@IconsMud.Landmark">Accounts</MudNavLink>
    <MudNavLink Href="/payees" Match="NavLinkMatch.Prefix" Icon="@IconsMud.Users2">Payees</MudNavLink>
    <MudNavLink Href="/asset-allocation" Match="NavLinkMatch.Prefix" Icon="@IconsMud.PieChart">Asset Allocation</MudNavLink>
    <MudNavLink Href="/scheduled-xacts" Match="NavLinkMatch.Prefix" Icon="@IconsMud.CalendarClock">Scheduled Transactions</MudNavLink>

    <MudDivider DividerType="DividerType.Middle" Class="mt-3 pt-3" />

    <MudNavLink Href="/cloud-backup" Match="NavLinkMatch.Prefix" Icon="@IconsMud.UploadCloud">Cloud Backup</MudNavLink>
    <MudNavLink Href="/settings" Match="NavLinkMatch.Prefix" Icon="@IconsMud.Settings">Settings</MudNavLink>
    <MudNavLink Href="/help" Match="NavLinkMatch.Prefix" Icon="@IconsMud.HelpCircle">Help</MudNavLink>
    <MudNavLink Href="/about" Match="NavLinkMatch.Prefix" Icon="@IconsMud.Info">About</MudNavLink>
</MudNavMenu>
