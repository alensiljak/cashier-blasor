@*
    Simple confirmation dialog.
    Receives the text via a parameter and returns a boolean.
*@

@using MudBlazor

<MudDialog Class="bg-primary">
    <DialogContent>
        @ContentText
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="@ConfirmationButtonColor" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string? ContentText { get; set; }

    [Parameter]
    public Color ConfirmationButtonColor { get; set; } = Color.Primary;

    void Submit() => MudDialog!.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog!.Cancel();
}

