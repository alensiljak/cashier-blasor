@*
    Toolbar implemented with MudBlazor components.
*@
@inject AppState appState
@using MudBlazor

<MudAppBar Color="Color.Primary" Dense="true" Class="glossy">
    <MudIconButton Icon="@IconsMud24.Menu" Color="Color.Inherit" Edge="Edge.Start"
                   OnClick="@((e) => OnMenuClick())" />

    <MudText Typo="Typo.h6">
        @Title
    </MudText>

    <MudSpacer />
    @* <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" /> *@
    @if (ContextMenuItems != null)
    {
        <MudMenu Icon="@IconsMud24.MoreVertical" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.TopRight"
            Color="Color.Inherit">
            @ContextMenuItems
        </MudMenu>
    }
</MudAppBar>

@code {
    [Parameter]
    public RenderFragment? Title { get; set; }

    [Parameter]
    public RenderFragment? ContextMenuItems { get; set; }

    private void OnMenuClick()
    {
        appState.ToggleSidebar();
    }

}
