@*
    A dialog component for entering simple text. 
    Used to enter an account name when creating a new account record.
*@
@using MudBlazor

<MudDialog Class="bg-primary">
    <DialogContent>
        @ContentText
        <MudTextField T="string" AutoFocus @bind-Value="InputText" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="@ConfirmationButtonColor" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string? ContentText { get; set; }

    [Parameter]
    public Color ConfirmationButtonColor { get; set; } = Color.Primary;

    private string? InputText {get;set;}

    void Submit() => MudDialog!.Close(DialogResult.Ok<string?>(InputText));
    void Cancel() => MudDialog!.Cancel();

}
