@*
    Displays app state values
*@

@page "/appstate-viewer"
@inject AppState State
@using System.Text.Json
@using MudBlazor
@using Newtonsoft.Json

<ToolbarMud>
    App State Viewer
</ToolbarMud>

<pre>
    @_appStateJson
</pre>

@code {
    string? _appStateJson;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        _appStateJson = JsonConvert.SerializeObject(State, Formatting.Indented);
    }
}
